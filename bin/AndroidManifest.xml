            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mti.ad220_project_02_db.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="com.mti.ad220_project_02_db.MainActivity" >

