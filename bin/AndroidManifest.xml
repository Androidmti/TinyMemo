            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mti.ad220_project_02_db.MainActivity" />
        </activity>
        <activity
            android:name="com.mti.ad220_project_02_db.StartActivity"
            android:label="@string/title_activity_start"
